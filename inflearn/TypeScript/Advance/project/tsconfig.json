{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types","./types"],
    "strict": true, // "strict"를 true로 만들면 여러가지 옵션들도 true로 바뀌는것이다.
  },
  "include": ["./src/**/*"]
}
